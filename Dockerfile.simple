FROM python:3.11-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir \
    fastapi \
    uvicorn \
    python-jose[cryptography] \
    passlib[bcrypt] \
    python-multipart \
    sqlalchemy \
    psycopg2-binary

# Copy application
COPY ./app /app/app

# Expose port
EXPOSE 50000

# Run the standalone version
CMD ["uvicorn", "app.main_standalone:app", "--host", "0.0.0.0", "--port", "50000", "--reload"]